<%= form_for(@deck, html:{ class: "form-horizontal"}) do |f| %>
  <% if @deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

      <ul>
      <% @deck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :styling, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :styling, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
    <%= f.submit "Save", class: "btn btn-primary" %>

    <% if @deck.id %>
      <%= link_to 'Show', @deck, class: "btn btn-default" %>
      <%= link_to 'Back', deck_path(@deck), class: "btn btn-default" %>
    <% else %>
      <%= link_to 'Back', decks_path, class: "btn btn-default" %>    
    <% end %>
    </div>
  </div>
<% end %>
