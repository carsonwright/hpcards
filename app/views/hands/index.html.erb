<p id="notice"><%= notice %></p>

<h1>Listing Hands</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Card</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hands.each do |hand| %>
      <tr>
        <td><%= hand.user_id %></td>
        <td><%= hand.card_id %></td>
        <td><%= hand.game_id %></td>
        <td><%= link_to 'Show', hand %></td>
        <td><%= link_to 'Edit', edit_hand_path(hand) %></td>
        <td><%= link_to 'Destroy', hand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

